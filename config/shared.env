EVENT_BUS_REDIS_ENABLED=true
EVENT_BUS_KURRENT_ENABLED=true
EVENT_BUS_BATCH_PUBLISH=true
EVENT_BUS_MAX_RETRY_ATTEMPTS=3
EVENT_BUS_RETRY_DELAY=1000

# Event Versioning
