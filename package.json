    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete namespace antifraud",
    "k8s:status": "kubectl get pods -n antifraud",
    "k8s:logs": "kubectl logs -f deployment/api-gateway -n antifraud",
