# Render Environment Variables Template
# Copy these to Render Dashboard > Environment Variables

# Node.js Configuration
NODE_ENV=production
PORT=10000

# Frontend URL
FRONTEND_URL=https://factcheck-frontend.onrender.com

# Database Configuration - Using Firestore
USE_FIRESTORE=true
# DATABASE_URL=postgresql://user:password@host:port/database (disabled)

# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# VirusTotal API Configuration
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
VIRUSTOTAL_API_URL=https://www.virustotal.com/api/v3

# Firebase Configuration
FIREBASE_PROJECT_ID=factcheck-1d6e8
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@factcheck-1d6e8.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
